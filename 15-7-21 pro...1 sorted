import java.util.*;
import java.io.*;
class Main
{
public static void main(String args[])
{
ArrayList<Integer> A1=new ArrayList<Integer>();
ArrayList<Integer> A2=new ArrayList<Integer>();
ArrayList<Integer> A3=new ArrayList<Integer>();
A1.add(10); 
A1.add(20); 
A1.add(30); 
A1.add(40);
A2.add(100); 
A2.add(200); 
A2.add(300); 
A2.add(400);
Collections.sort(A1);
Collections.sort(A2);
A1.addAll(A2);
A3.addAll(A1);

System.out.println("Array3:"+A3);

}
}

output:
Array3:[10, 20, 30, 40, 100, 200, 300, 400]
