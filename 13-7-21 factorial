import java.util.*;
class Main
{
		public static int factorial(int n)
		{
			if (n==0)
			return 1;
			else
			return n*factorial(n-1) ;
		}
		public static void main(String args[])
	{
		int n;
		Scanner s=new Scanner(System.in);
		System.out.print("enter a number");
		n=s.nextInt();
		System.out.print(factorial(n) );
	}	
	
}

output:
enter a number5
120
